<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Traffu | Police Dashboard</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
  <style>
    :root {
      --bg: #0f172a;
      --sidebar: #1e293b;
      --card: #1e293b;
      --primary: #3b82f6;
      --success: #10b981;
      --warning: #f59e0b;
      --danger: #ef4444;
      --text: #e2e8f0;
      --text-muted: #94a3b8;
      --border: #334155;
      --shadow: 0 12px 30px rgba(0,0,0,0.4);
    }

    * { margin:0; padding:0; box-sizing:border-box; }
    body {
      font-family: 'Poppins', sans-serif;
      background: var(--bg);
      color: var(--text);
      min-height: 100vh;
      display: flex;
    }

    /* Sidebar */
    .sidebar {
      width: 260px;
      background: var(--sidebar);
      padding: 25px;
      box-shadow: var(--shadow);
      position: fixed;
      height: 100vh;
      overflow-y: auto;
      z-index: 100;
    }

    .logo {
      display: flex;
      align-items: center;
      gap: 12px;
      margin-bottom: 40px;
      font-size: 24px;
      font-weight: 700;
    }
    .logo i { color: var(--primary); font-size: 28px; }

    .nav-menu {
      list-style: none;
    }
    .nav-item {
      margin-bottom: 8px;
    }
    .nav-link {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 12px 16px;
      color: var(--text-muted);
      text-decoration: none;
      border-radius: 12px;
      transition: all 0.3s ease;
      font-weight: 500;
    }
    .nav-link:hover, .nav-link.active {
      background: var(--primary);
      color: white;
    }
    .nav-link i { font-size: 18px; }

    /* Main Content */
    .main-content {
      flex: 1;
      margin-left: 260px;
      padding: 30px;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
    }
    .header h1 {
      font-size: 26px;
      font-weight: 700;
    }
    .clock {
      background: var(--card);
      padding: 10px 20px;
      border-radius: 12px;
      font-weight: 600;
      color: var(--primary);
      border: 1px solid var(--border);
    }

    /* Officer Card */
    .officer-card {
      background: var(--card);
      border-radius: 16px;
      padding: 24px;
      box-shadow: var(--shadow);
      margin-bottom: 30px;
      display: flex;
      align-items: center;
      gap: 20px;
      border: 1px solid var(--border);
    }
    .officer-avatar {
      width: 90px;
      height: 90px;
      background: var(--primary);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 36px;
      color: white;
      font-weight: bold;
    }
    .officer-info h3 {
      font-size: 22px;
      margin-bottom: 6px;
    }
    .officer-info p {
      color: var(--text-muted);
      margin-bottom: 4px;
      font-size: 15px;
    }
    .badge {
      display: inline-block;
      padding: 4px 12px;
      border-radius: 20px;
      font-size: 13px;
      font-weight: 600;
    }
    .badge.rank { background: #3b82f6; color: white; }
    .badge.checkpost { background: #10b981; color: white; }

    /* Stats */
    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }
    .stat-card {
      background: var(--card);
      padding: 20px;
      border-radius: 16px;
      text-align: center;
      box-shadow: var(--shadow);
      border: 1px solid var(--border);
    }
    .stat-card i {
      font-size: 32px;
      margin-bottom: 12px;
      color: var(--primary);
    }
    .stat-card h3 {
      font-size: 24px;
      font-weight: 700;
      margin-bottom: 6px;
    }
    .stat-card p {
      color: var(--text-muted);
      font-size: 14px;
    }

    /* Table */
    .table-container {
      background: var(--card);
      border-radius: 16px;
      overflow: hidden;
      box-shadow: var(--shadow);
      border: 1px solid var(--border);
    }
    table {
      width: 100%;
      border-collapse: collapse;
    }
    th {
      background: var(--primary);
      color: white;
      padding: 16px;
      text-align: left;
      font-weight: 600;
    }
    td {
      padding: 14px 16px;
      border-bottom: 1px solid var(--border);
    }
    tr:last-child td { border-bottom: none; }
    .status {
      padding: 6px 12px;
      border-radius: 20px;
      font-size: 13px;
      font-weight: 600;
    }
    .status.paid { background: #dcfce7; color: #166534; }
    .status.due  { background: #fee2e2; color: #991b1b; }

    /* Responsive */
    @media (max-width: 992px) {
      .sidebar { width: 80px; padding: 20px 10px; }
      .sidebar .logo span, .nav-link span { display: none; }
      .main-content { margin-left: 80px; }
    }
    @media (max-width: 768px) {
      .main-content { padding: 20px; }
      .officer-card { flex-direction: column; text-align: center; }
      .stats-grid { grid-template-columns: 1fr; }
    }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <aside class="sidebar">
    <div class="logo">
      <i class="fas fa-car-side"></i>
      <span>Traffu</span>
    </div>
    <ul class="nav-menu">
      <li class="nav-item">
        <a href="#" class="nav-link active">
          <i class="fas fa-tachometer-alt"></i>
          <span>Dashboard</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/traffic-ai" class="nav-link">
          <i class="fas fa-brain"></i>
          <span>Traffic AI</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="#" class="nav-link">
          <i class="fas fa-search"></i>
          <span>Search Vehicle</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/police/chalan" class="nav-link">
          <i class="fas fa-file-invoice"></i>
          <span>Issue Chalan</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="#" class="nav-link">
          <i class="fas fa-sign-out-alt"></i>
          <span onclick="Alukha ();">Logout</span>
        </a>
      </li>
    </ul>
  </aside>

  <!-- Main Content -->
  <main class="main-content">
    <div class="header">
      <h1>Police Dashboard</h1>
      <div class="clock" id="clock"></div>
    </div>

    <!-- Officer Card -->
    <div class="officer-card">
      <div class="officer-avatar">A</div>
      <div class="officer-info">
        <h3 id="officer-name"><%=info.name%></h3>
        <p><span class="badge rank" id="officer-rank"><%=info.rank%></span></p>
        <p><span class="badge checkpost" id="officer-checkpost"><%=info.checkpost%></span></p>
        <p>Email: <span id="officer-email"><%=info.email%></span></p>
      </div>
    </div>

    <!-- Stats -->
    <div class="stats-grid">
      <div class="stat-card">
        <i class="fas fa-car-crash"></i>
        <h3><%=PoliceObj.chalans%></h3>
        <p>Total Chalans Issued</p>
      </div>
      <div class="stat-card">
        <i class="fas fa-check-circle"></i>
        <h3><%=PoliceObj.Paid%></h3>
        <p>Paid</p>
      </div>
      <div class="stat-card">
        <i class="fas fa-exclamation-triangle"></i>
        <h3><%=PoliceObj.due%></h3>
        <p>Due</p>
      </div>
      <div class="stat-card">
        <i class="fas fa-rupee-sign"></i>
        <%
        let total = 0; 
        PoliceObj.taka.forEach(amount => {
          total += amount;
        }); %> 
        <h3>$<%=total%> </h3>
        <p>Collected</p>
      </div>
    </div>

    <!-- Fines History -->
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>Driver Name</th>
            <th>Vehicle No.</th>
            <th>Offence</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody id="fines-table">
          <% if(penal.length > 0 ) { %>
            <% penal.forEach(value => {%>
              <tr>
            <td><%=value.Driver%></td>
            <td><%=value.carNumber%></td>
            <td><%=value.violation%></td>
            <td>$<%=value.amount%></td>
                   <% const shortDate = new Date(value.issuedAt).toLocaleDateString('en-GB', {
  day: '2-digit',
  month: 'short',
  year: 'numeric'
}); %> 
            <td><%=shortDate%></td>
     
            <td><span class="status <%=value.status%>"><%=value.status%></span></td>
          </tr>
           <% }); %> 
            <% } %>  
          
         
         
          
        </tbody>
      </table>
    </div>
  </main>

  <script>
    function Alukha () {
       fetch("/logout/polic",{
                    method:"GET"
                })
                .then(response=>response.json())
                .then(info=>{
                    if(info==1) {
                        alert("Logout Successful !")
window.location.href = '/'
                    }
                    else {
                          alert("Logout unsuccessful !")
                    }
                })
    }
    // Real-time Clock
    function updateClock() {
      const now = new Date();
      const time = now.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit', second: '2-digit' });
      const date = now.toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' });
      document.getElementById('clock').textContent = `${date} | ${time}`;
    }
    setInterval(updateClock, 1000);
    updateClock();

    // Load user from localStorage (after login)
    window.addEventListener('load', () => {
      const user = JSON.parse(localStorage.getItem('user') || '{}');
      if (user.name) {
        document.getElementById('officer-name').textContent = user.name;
        document.getElementById('officer-rank').textContent = user.rank;
        document.getElementById('officer-checkpost').textContent = user.checkpost;
        document.getElementById('officer-email').textContent = user.email;
        document.querySelector('.officer-avatar').textContent = user.name.charAt(0).toUpperCase();
      } else {
        alert('Please login first!');
        window.location.href = '/login.html';
      }
    });

    // Logout
    document.querySelector('.nav-link[href="#"]:last-child').addEventListener('click', (e) => {
      e.preventDefault();
      localStorage.clear();
      window.location.href = '/login.html';
    });
  </script>
</body>
</html>