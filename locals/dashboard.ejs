<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Traffu AI Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@700&family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
        :root {
            --bg-gradient: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
            --card-bg: rgba(20, 20, 40, 0.95);
            --text-primary: #e0e0ff;
            --text-secondary: #a0a0ff;
            --accent: #00d4ff;
            --accent-hover: #00a8cc;
            --success: #00ff88;
            --warning: #ffcc00;
            --danger: #ff6b6b;
            --border-glow: rgba(0, 212, 255, 0.3);
            --sidebar-width: 280px;
            --sidebar-collapsed: 70px;
            --transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
        }

        *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

        body {
            font-family: 'Poppins', sans-serif;
            background: var(--bg-gradient);
            color: var(--text-primary);
            min-height: 100vh;
            overflow-x: hidden;
            position: relative;
            display: flex;
        }

        body::before {
            content: '';
            position: absolute;
            inset: 0;
            background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="120" height="120" viewBox="0 0 120 120"><circle cx="60" cy="60" r="1.5" fill="%2300d4ff" opacity="0.08"/></svg>') repeat;
            animation: drift 30s infinite linear;
            pointer-events: none;
            z-index: 0;
        }

        @keyframes drift { 0% { transform: translate(0, 0); } 100% { transform: translate(-60px, -60px); } }

        /* ============= SIDEBAR ============= */
        .sidebar {
            position: fixed;
            top: 0; left: 0;
            width: var(--sidebar-width);
            height: 100vh;
            background: rgba(10, 10, 25, 0.95);
            backdrop-filter: blur(12px);
            border-right: 1px solid var(--border-glow);
            box-shadow: 5px 0 20px rgba(0, 0, 0, .4);
            z-index: 1000;
            transition: var(--transition);
            overflow: hidden;
        }

        .sidebar.collapsed { width: var(--sidebar-collapsed); }

        .sidebar-header {
            padding: 24px 20px;
            text-align: center;
            border-bottom: 1px solid var(--border-glow);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .logo {
            font-family: 'Orbitron', sans-serif;
            font-size: 28px;
            color: var(--accent);
            text-shadow: 0 0 15px rgba(0,212,255,.7);
            letter-spacing: 2px;
            display: flex;
            align-items: center;
            gap: 10px;
            transition: var(--transition);
        }

        .logo i { font-size: 32px; animation: pulse 2s infinite; }
        @keyframes pulse { 0%,100%{transform:scale(1)} 50%{transform:scale(1.12)} }

        .sidebar.collapsed .logo span { opacity: 0; width: 0; overflow: hidden; }

        .nav-menu { padding: 16px 0; }
        .nav-item {
            padding: 14px 20px;
            display: flex;
            align-items: center;
            gap: 15px;
            color: var(--text-secondary);
            cursor: pointer;
            transition: var(--transition);
            position: relative;
        }

        .nav-item i { width: 30px; text-align: center; font-size: 20px; }
        .nav-item span { font-weight: 500; transition: opacity .3s; }

        .sidebar.collapsed .nav-item span { opacity: 0; width: 0; overflow: hidden; }

        .nav-item:hover,
        .nav-item.active {
            background: rgba(0,212,255,.15);
            color: var(--accent);
            border-left: 4px solid var(--accent);
            box-shadow: 0 0 15px rgba(0,212,255,.3);
        }

        .nav-item::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(90deg, transparent, rgba(0,212,255,.1));
            transform: translateX(-100%);
            transition: transform .5s;
        }
        .nav-item:hover::before { transform: translateX(100%); }

        .logout-btn {
            position: absolute;
            bottom: 20px;
            left: 20px;
            right: 20px;
            padding: 12px;
            background: linear-gradient(45deg, #ff3333, #cc0000);
            color: #fff;
            border: none;
            border-radius: 10px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            transition: var(--transition);
        }

        .logout-btn:hover {
            background: linear-gradient(45deg, #ff1a1a, #b30000);
            transform: translateY(-2px);
            box-shadow: 0 8px 15px rgba(255,51,51,.3);
        }

        .sidebar.collapsed .logout-btn span { opacity: 0; width: 0; overflow: hidden; }

        .toggle-btn {
            position: absolute;
            top: 20px;
            right: -15px;
            width: 30px;
            height: 30px;
            background: var(--accent);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: 0 0 15px rgba(0,212,255,.5);
            z-index: 1001;
            transition: var(--transition);
        }

        .toggle-btn:hover { background: var(--accent-hover); transform: scale(1.1); }

        /* ============= MAIN CONTENT ============= */
        .main-content {
            margin-left: var(--sidebar-width);
            flex: 1;
            padding: 24px;
            min-height: 100vh;
            transition: var(--transition);
            position: relative;
            z-index: 1;
        }

        .main-content.collapsed { margin-left: var(--sidebar-collapsed); }

        .header {
            text-align: center;
            margin-bottom: 24px;
        }

        .welcome {
            font-size: 16px;
            color: var(--text-secondary);
            letter-spacing: 1px;
        }

        .welcome strong { color: var(--accent); }

        /* AI Panel */
        .ai-panel {
            background: linear-gradient(135deg, rgba(0,212,255,.1), rgba(0,100,255,.1));
            border: 1px solid var(--accent);
            border-radius: 16px;
            padding: 20px;
            margin-bottom: 24px;
            position: relative;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0,212,255,.2);
        }

        .ai-panel::before {
            content: 'AI';
            position: absolute;
            top: -20px; right: -20px;
            font-family: 'Orbitron', sans-serif;
            font-size: 80px;
            color: rgba(0,212,255,.1);
            pointer-events: none;
        }

        .ai-title {
            font-size: 18px;
            color: var(--accent);
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .ai-insight {
            font-size: 15px;
            line-height: 1.6;
            color: var(--text-primary);
        }

        .ai-insight strong { color: var(--accent); }

        /* User Info */
        .user-info {
            background: var(--card-bg);
            backdrop-filter: blur(12px);
            padding: 24px;
            border-radius: 16px;
            margin-bottom: 24px;
            border: 1px solid var(--border-glow);
            box-shadow: 0 10px 25px rgba(0,0,0,.3), 0 0 20px var(--border-glow);
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 18px;
        }

        .info-item {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }

        .info-label {
            font-size: 13px;
            color: var(--text-secondary);
            margin-bottom: 6px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .info-value {
            font-size: 18px;
            font-weight: 600;
            color: var(--text-primary);
        }

        .status-badge {
            padding: 4px 10px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: .5px;
            background: rgba(0,255,136,.2);
            color: var(--success);
            border: 1px solid var(--success);
        }

        /* Section Title */
        .section-title {
            font-size: 22px;
            color: var(--accent);
            margin: 32px 0 20px;
            text-align: center;
            text-shadow: 0 0 10px rgba(0,212,255,.5);
            position: relative;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -8px;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 3px;
            background: var(--accent);
            border-radius: 2px;
            box-shadow: 0 0 10px var(--accent);
        }

        /* Penalties */
        .penalty-list {
            display: grid;
            gap: 20px;
        }

        .penalty-card {
            background: var(--card-bg);
            backdrop-filter: blur(12px);
            padding: 22px;
            border-radius: 16px;
            border: 1px solid var(--border-glow);
            box-shadow: 0 8px 20px rgba(0,0,0,.25), 0 0 15px var(--border-glow);
            transition: var(--transition);
            position: relative;
            overflow: hidden;
        }

        .penalty-card:hover {
            transform: translateY(-6px) scale(1.015);
            box-shadow: 0 15px 35px rgba(0,0,0,.4), 0 0 30px rgba(0,212,255,.5);
        }

        .penalty-card::before {
            content: '';
            position: absolute;
            top: 0; left: 0;
            width: 5px;
            height: 100%;
            background: var(--accent);
            box-shadow: 0 0 12px var(--accent);
        }

        .penalty-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 14px;
        }

        .checkpoint {
            font-size: 17px;
            font-weight: 600;
            color: var(--text-primary);
        }

        .date {
            font-size: 13px;
            color: var(--text-secondary);
        }

        .penalty-details {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 14px;
            font-size: 14px;
            margin-bottom: 16px;
        }

        .detail-label {
            color: var(--text-secondary);
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: .5px;
        }

        .detail-value {
            color: var(--text-primary);
            font-weight: 500;
        }

        .amount-due {
            font-size: 24px;
            font-weight: 700;
            color: var(--danger);
            text-align: center;
            margin: 16px 0 12px;
            text-shadow: 0 0 10px rgba(255,107,107,.5);
        }

        .pay-now-btn {
            width: 100%;
            padding: 14px;
            background: linear-gradient(45deg, var(--danger), #cc0000);
            color: #fff;
            border: none;
            border-radius: 12px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1.2px;
            cursor: pointer;
            transition: var(--transition);
            position: relative;
            overflow: hidden;
        }

        .pay-now-btn::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,.2), transparent);
            transform: translateX(-100%);
            transition: transform .6s;
        }

        .pay-now-btn:hover::before { transform: translateX(100%); }

        .pay-now-btn:hover {
            background: linear-gradient(45deg, #ff3333, #ff1a1a);
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(255,107,107,.4);
        }

        .paid-stamp {
            font-size: 20px;
            font-weight: 600;
            color: var(--success);
            text-align: center;
            margin: 16px 0 8px;
            text-shadow: 0 0 10px rgba(0,255,136,.5);
        }

        .paid-date {
            font-size: 13px;
            color: var(--text-secondary);
            text-align: center;
            font-style: italic;
        }

        .no-penalties {
            text-align: center;
            padding: 60px 20px;
            color: var(--text-secondary);
            font-size: 17px;
            background: var(--card-bg);
            border-radius: 16px;
            border: 1px dashed var(--border-glow);
        }

        .no-penalties i {
            font-size: 48px;
            color: var(--success);
            margin-bottom: 16px;
            animation: float 3s ease-in-out infinite;
        }

        @keyframes float { 0%,100%{transform:translateY(0)} 50%{transform:translateY(-10px)} }

        /* ============= RESPONSIVE ============= */
        @media (max-width: 992px) {
            .sidebar { width: var(--sidebar-collapsed); }
            .main-content { margin-left: var(--sidebar-collapsed); }
            .sidebar .logo span,
            .sidebar .nav-item span,
            .sidebar .logout-btn span { opacity: 0; width: 0; overflow: hidden; }
        }

        @media (max-width: 768px) {
            .main-content { padding: 16px; }
            .user-info,
            .penalty-details { grid-template-columns: 1fr; }
            .section-title { font-size: 20px; margin: 24px 0 16px; }
            .penalty-card { padding: 18px; }
        }

        @media (max-width: 480px) {
            .logo { font-size: 24px; }
            .logo i { font-size: 28px; }
            .welcome { font-size: 15px; }
            .user-info { padding: 18px; gap: 16px; }
            .info-value { font-size: 16px; }
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
        <div class="toggle-btn" id="toggleBtn">
            <i class="fas fa-chevron-left" id="toggleIcon"></i>
        </div>

        <div class="sidebar-header">
            <div class="logo">
                <i class="fas fa-car-side"></i>
                <span>TRAFFU</span>
            </div>
        </div>

        <nav class="nav-menu">
            <div class="nav-item active"><i class="fas fa-tachometer-alt"></i><span>Dashboard</span></div>
            <!-- <div class="nav-item"><i class="fas fa-exclamation-triangle"></i><span>Penalties</span></div> -->
            <div class="nav-item"><i class="fas fa-brain"></i><span>Traffic AI</span></div>
            <!-- <div class="nav-item"><i class="fas fa-history"></i><span>History</span></div>
            <div class="nav-item"><i class="fas fa-cog"></i><span>Settings</span></div> -->
        </nav>

        <button class="logout-btn">
            <i class="fas fa-sign-out-alt"></i>
            <span >Logout</span>
        </button>
    </aside>

    <!-- Main Content -->
    <main class="main-content" id="mainContent">
        <header class="header">
            <div class="welcome">Welcome back, <strong id="userName"><%=info.name%></strong>!</div>
        </header>

        <!-- AI Insight -->
        <section class="ai-panel">
            <div class="ai-title"><i class="fas fa-robot"></i> Traffic AI Insight</div>
            <div class="ai-insight">
               
            </div>
        </section>

        <!-- User Info -->
        <section class="user-info">
            <div class="info-item">
                <div class="info-label">NID Number</div>
                <div class="info-value"><%=info.nid%></div>
            </div>
            <div class="info-item">
                <div class="info-label">License Number</div>
                <div class="info-value"><%=info.drivingLicense%></div>
            </div>
            <div class="info-item">
                <div class="info-label">Vehicle</div>
                <div class="info-value"><%=info.carNumber%></div>
            </div>
            <div class="info-item">
                <div class="info-label">Status</div>
                <div class="info-value"><span class="status-badge status-active">Active</span></div>
            </div>
        </section>

        <!-- Penalties -->
        <h2 class="section-title">Traffic Penalties & Payments</h2>
        <div class="penalty-list">

            <!-- Unpaid -->
             <% if (BesiInfo.unpaid.length > 0 ) { %>
                <% BesiInfo.unpaid.forEach(element => {%>
                     <article class="penalty-card">
                <header class="penalty-header">
                    <div class="checkpoint"><%=element.Zone%> Checkpoint </div>
                      <% const shortDate = new Date(element.createdAt).toLocaleDateString('en-GB', {
  day: '2-digit',
  month: 'short',
  year: 'numeric'
}); %> 
                    <div class="date"><%= shortDate %> </div>
                </header>
                <div class="penalty-details">
                    <div><div class="detail-label">Violation</div><div class="detail-value"><%=element.violation%> </div></div>
                    <div><div class="detail-label">Officer</div><div class="detail-value"><%= element.NameAndRank %> </div></div>
                </div>
                <div class="amount-due"><% element.amount %>  Taka Due</div>
                <button class="pay-now-btn">Pay Now</button>
            </article>
               <% }); %> 

            <% } %> 
           

              <% if (BesiInfo.Paid.length > 0 ) { %>
                <% BesiInfo.Paid.forEach(element => {%>
            <article class="penalty-card">
                <header class="penalty-header">
                    <div class="checkpoint"><%=element.Zone%> Checkpoint</div>
                     <% const shortDate = new Date(element.createdAt).toLocaleDateString('en-GB', {
  day: '2-digit',
  month: 'short',
  year: 'numeric'
}); %> 
                    <div class="date"><%= shortDate %></div>
                </header>
                <div class="penalty-details">
                    <div><div class="detail-label">Violation</div><div class="detail-value"><%=element.violation%></div></div>
                    <div><div class="detail-label">Officer</div><div class="detail-value"><%= element.NameAndRank %> </div></div>
                </div>
                <div class="paid-stamp"><%= element.amount %>  Taka Paid</div>
                <div class="paid-date">Paid on via Hand</div>
            </article>
 <% }); %> 

            <% } %> 
          

        </div>

         <% if (BesiInfo.Paid.length === 0  && BesiInfo.unpaid.length === 0 ) { %>
        <div class="no-penalties">
            <i class="fas fa-check-circle"></i>
            <p>Congratulations! No pending penalties.</p>
            <p>Drive safe and follow traffic rules.</p>
        </div>
       <% } %> 
    </main>

    <script>
        const sidebar = document.getElementById('sidebar');
        const mainContent = document.getElementById('mainContent');
        const toggleBtn = document.getElementById('toggleBtn');
        const toggleIcon = document.getElementById('toggleIcon');

        toggleBtn.addEventListener('click', () => {
            sidebar.classList.toggle('collapsed');
            mainContent.classList.toggle('collapsed');
            toggleIcon.classList.toggle('fa-chevron-left');
            toggleIcon.classList.toggle('fa-chevron-right');
        });

        // Responsive auto-collapse
        const checkWidth = () => {
            if (window.innerWidth <= 992) {
                sidebar.classList.add('collapsed');
                mainContent.classList.add('collapsed');
                toggleIcon.classList.remove('fa-chevron-left');
                toggleIcon.classList.add('fa-chevron-right');
            } else {
                sidebar.classList.remove('collapsed');
                mainContent.classList.remove('collapsed');
                toggleIcon.classList.remove('fa-chevron-right');
                toggleIcon.classList.add('fa-chevron-left');
            }
        };
        window.addEventListener('resize', checkWidth);
        checkWidth();

        // Logout demo
        document.querySelector('.logout-btn').addEventListener('click', () => {
            if (confirm('Are you sure you want to logout?')) {
                fetch("/logout/traffu",{
                    method:"GET"
                })
                .then(response=>response.json())
                .then(info=>{
                    if(info==1) {
                        alert("Logout Successful !")
window.location.href = '/'
                    }
                    else {
                          alert("Logout unsuccessful !")
                    }
                })
                
            }
        });
    </script>
    <script>
      const aiMotamot =  document.querySelector(".ai-insight");
      fetch("/check-ai")
      .then(response=>response.json())
      .then(info=>{
        if(info.success === true) {
               aiMotamot.innerHTML = info.summary;
        }
        else {
             aiMotamot.innerHTML = `<strong>Sorry some problem showed up with the AI</strong>`
        }
      })
    </script>
</body>
</html>